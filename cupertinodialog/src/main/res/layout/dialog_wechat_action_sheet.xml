<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:gravity="bottom"
    tools:layout_gravity="bottom">

    <com.hanter.android.radwidget.cupertino.blur.BlurView
        android:id="@+id/blurView"
        app:blv_hasTopRightRound="true"
        app:blv_hasTopLeftRound="true"
        app:blv_roundRadius="@dimen/cupertino_dialog_corner_radius"
        app:blv_overlayColor="@android:color/white"
        app:blv_overlayBlendMode="overlay"
        app:blv_barrierColor="#6604040F"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:textSize="13dp"
                android:textColor="#8F8F8F"
                android:textStyle="bold"
                tools:text="title"
                android:paddingLeft="@dimen/action_sheet_content_padding_horizontal"
                android:paddingRight="@dimen/action_sheet_content_padding_horizontal"
                android:paddingTop="@dimen/action_sheet_content_padding_vertical"
                android:paddingBottom="@dimen/action_sheet_content_padding_vertical"
                android:gravity="center"
                android:background="@color/actionSheetDialogOverlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/message"
                android:textSize="13dp"
                android:textColor="#8F8F8F"
                tools:text="message"
                android:paddingLeft="@dimen/action_sheet_content_padding_horizontal"
                android:paddingRight="@dimen/action_sheet_content_padding_horizontal"
                android:paddingTop="@dimen/action_sheet_content_padding_vertical"
                android:paddingBottom="@dimen/action_sheet_content_padding_vertical"
                android:gravity="center"
                android:background="@color/actionSheetDialogOverlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="3"
                tools:listitem="@layout/item_action_sheet_wechat" />

        </LinearLayout>

    </com.hanter.android.radwidget.cupertino.blur.BlurView>

    <Button
        android:id="@+id/btnCancel"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/blurView"
        android:background="@drawable/btn_action_sheet_cancel_rect"
        android:gravity="center"
        android:text="取消"
        android:textColor="#1F1F1F"
        android:textSize="20dp" />

</RelativeLayout>