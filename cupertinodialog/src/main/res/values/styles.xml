<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Dialog.Cupertino" parent="Theme.AppCompat.Dialog" >
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="Dialog.Cupertino.ActionSheet" parent="Dialog.Cupertino">
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowAnimationStyle">@style/ActionSheetAnimation</item>
    </style>

    <style name="ActionSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/action_sheet_slide_in</item>
        <item name="android:windowExitAnimation">@anim/action_sheet_slide_out</item>
    </style>

    <style name="Dialog.Cupertino.Alert" parent="Dialog.Cupertino">
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
        <item name="android:windowMinWidthMinor">270dp</item>
        <item name="android:windowMinWidthMajor">310dp</item>
    </style>

    <style name="CupertinoActionSheetCancelButton" >
        <item name="android:gravity">center</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#066cf8</item>
        <item name="android:background">@drawable/btn_action_sheet_cancel</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="CupertinoAlertDialogAction" >
        <item name="android:background">@drawable/btn_cupertino_alert</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/CupertinoAlertDialogAction.Text</item>
    </style>

    <style name="CupertinoAlertDialogAction.Text" parent="android:TextAppearance" >
        <item name="android:textColor">@color/cupertinoActiveBlue</item>
        <item name="android:textSize">16.8dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CupertinoActionSheetAction" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/bg_item_action_sheet</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/CupertinoActionSheetAction.Text</item>
    </style>

    <style name="CupertinoActionSheetAction.Text" parent="android:TextAppearance" >
        <item name="android:textColor">@color/cupertinoActiveBlue</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>